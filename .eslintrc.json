{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"globals": {
		"$": "readonly",
		"$$": "readonly",
		"browser": "readonly",
		"expect": "readonly",
		"Given": "readonly"
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 13,
        "sourceType":"module"
	},
	"ignorePatterns": ["allure-*"],
	"rules": {
		"block-spacing": "error",
		"comma-dangle": ["error", "never"],
		"comma-spacing": "error",
		"curly": "warn",
		"dot-location": ["error", "property"],
		"dot-notation": "error",
		"eol-last": "error",
		"eqeqeq": "error",
		"global-require": "off",
		"import/no-dynamic-require": "off",
		"indent": ["error", 2, {
			"FunctionExpression": {
				"body": 1,
				"parameters": 1
			},
			"SwitchCase": 1
		}],
		"key-spacing": ["error", {
			"beforeColon": false,
			"afterColon": true
		}],
		"keyword-spacing": ["error", {
			"before": true,
			"after": true
		}],
		"max-len": ["error", 240, 2],
		"multiline-ternary": ["error", "always-multiline"],
		"new-cap": ["error", {
			"capIsNewExceptions": ["Given", "When", "Then", "And", "Before", "BeforeFeatures", "BeforeScenario", "AfterScenario"]
		}],
		"newline-after-var": 0,
		"no-console": 2,
		"no-duple-else-if": 0,
		"no-global-assign": 0,
		"no-multiple-empty-lines": ["warn", {
			"max": 2
		}],
		"no-prototype-builtins": "off",
		"no-setter-return": 0,
		"no-unused-expressions": 0,
		"no-unused-vars": "error",
		"no-var": "error",
		"operator-linebreak": ["error", "before", {
			"overrides": {
				"&&": "before",
				"||": "before"
			}
		}],
		"optional-chaining": 0,
		"padded-blocks": ["error", {
			"blocks": "never"
		}],
		"padding-line-between-statements": "error",
		"quotes": ["error", "single"],
		"radix": "off",
		"semi": ["error", "always"],
		"space-before-blocks": ["error", "always"],
		"space-before-function-paren": 0,
		"space-in-parens": ["error", "never"]
	}
}